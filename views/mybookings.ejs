<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile & Bookings</title>
    <link rel="stylesheet" href="/css/mybookings.css">
    <%- include('./partials/commoncss.ejs') %>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        header {
            background-color: #000;
        }
        .status-cancelled {
            color: #dc3545;
            font-weight: 600;
        }
        .status-booked {
            color: #28a745;
            font-weight: 600;
        }
        .status-completed {
            color: #17a2b8;
            font-weight: 600;
        }
        .status-checked-in {
            color: #ffc107;
            font-weight: 600;
        }
        .disabled-button {
            pointer-events: none;
            cursor: not-allowed;
            background-color: #6c757d !important;
            color: #fff !important;
        }
        .completed-btn {
            pointer-events: none;
            cursor: not-allowed;
            background-color: #28a745 !important;
            color: #fff !important;
        }
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 30px 0;
            gap: 15px;
        }

        .pagination-link {
            padding: 12px 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            cursor: pointer;
            text-decoration: none;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .pagination-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }

        .pagination span {
            margin: 0 10px;
            font-weight: 500;
            color: #333;
        }
        
        .error-msg {
            color: #dc3545;
            font-size: 12px;
            margin-top: 5px;
            display: none;
            font-weight: 500;
        }

        /* Modern Profile Section */
        .profile-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 60px 20px;
            margin-bottom: 40px;
            border-radius: 20px;
            margin: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .profile-header h1 {
            color: white;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .profile-header p {
            color: rgba(255,255,255,0.9);
            font-size: 1.1rem;
            font-weight: 400;
        }

        .profile-content {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 40px;
            align-items: start;
            max-width: 1200px;
            margin: 0 auto;
        }

        .profile-image-section {
            text-align: center;
        }

        .profile-image-container {
            position: relative;
            display: inline-block;
            margin-bottom: 20px;
        }

        .profile-image {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .profile-image:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 40px rgba(0,0,0,0.4);
        }

        .image-upload-overlay {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 8px 12px;
            border-radius: 20px;
            font-size: 12px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .profile-image-container:hover .image-upload-overlay {
            opacity: 1;
        }

        .profile-form {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .form-group {
            position: relative;
        }

        .form-group.full-width {
            grid-column: 1 / -1;
        }

        .form-input {
            width: 100%;
            padding: 15px 20px;
            border: 2px solid #e1e5e9;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 500;
            background: #f8f9fa;
            transition: all 0.3s ease;
            color: #333;
        }

        .form-input:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .form-input::placeholder {
            color: #6c757d;
            font-weight: 400;
        }

        .update-profile-btn {
            width: 100%;
            padding: 15px 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .update-profile-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }

        .update-profile-btn:active {
            transform: translateY(0);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .profile-content {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .profile-header h1 {
                font-size: 2rem;
            }

            .profile-form {
                padding: 30px 20px;
            }

            .form-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .profile-image {
                width: 150px;
                height: 150px;
            }
        }

        @media (max-width: 480px) {
            .profile-section {
                margin: 10px;
                padding: 40px 15px;
            }

            .profile-header h1 {
                font-size: 1.8rem;
            }

            .profile-form {
                padding: 20px 15px;
            }
        }
    </style>
</head>
<body>
    <div id="preloader"></div>
    <div class="maincontainer">
        <% if (error.length > 0) { %>
            <div class="error" id="msgdiv"><p><%=error%></p><i class="fa-regular fa-circle-xmark" id="close"></i></div>
        <% } %>
        <% if (sucess.length > 0) { %>
            <div class="sucess" id="msgdiv"><p><%=sucess%></p><i class="fa-regular fa-circle-xmark" id="close"></i></div>
        <% } %>
        <%- include('./partials/nav') %>

        <!-- Modern Profile Section -->
        <div class="profile-section">
            <div class="profile-header">
                <h1>My Profile</h1>
                <p>Manage your personal information and preferences</p>
            </div>
            
            <div class="profile-content">
                <div class="profile-image-section">
                    <div class="profile-image-container" id="imgholder">
                        <% if (user.userImg) { %>
                            <img src="/uploads/<%= user.userImg %>" alt="Profile Image" class="profile-image" id="userimg">
                        <% } else { %>
                            <img src="/images/default.png" alt="Default Profile" class="profile-image" id="userimg">
                        <% } %>
                        <div class="image-upload-overlay">
                            <i class="fas fa-camera"></i> Click to change
                        </div>
                    </div>
                </div>

                <div class="profile-form">
                    <h3 class="form-title">Personal Information</h3>
                    <form id="profileForm" action="/user/updateprofile" method="post" enctype="multipart/form-data">
                        <div class="form-grid">
                            <div class="form-group">
                                <input type="text" value="<%= user.name %>" name="name" placeholder="Full Name" class="form-input" required>
                                <div class="error-msg" id="name-error">Please enter your full name.</div>
                            </div>
                            <div class="form-group">
                                <input type="email" value="<%= user.email %>" name="email" placeholder="Email Address" class="form-input" required>
                                <div class="error-msg" id="email-error">Please enter a valid email address.</div>
                            </div>
                            <div class="form-group">
                                <input type="tel" value="<%= user.phone %>" name="phone" placeholder="Contact Phone" class="form-input" required>
                                <div class="error-msg" id="phone-error">Please enter a valid phone number.</div>
                            </div>
                            <div class="form-group">
                                <input type="text" value="<%= user.Address %>" name="Address" placeholder="Address (City, Country)" class="form-input">
                                <div class="error-msg" id="address-error">Please enter a valid address format (City, Country).</div>
                            </div>
                        </div>
                        <input type="hidden" name="old_ProfileImg" value="<%= user.userImg %>">
                        <input type="file" id="file" name="userImg" accept=".png, .jpg, .jpeg" hidden>
                        <button type="submit" class="update-profile-btn">
                            <i class="fas fa-save"></i> Update Profile
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Bookings Section -->
        <div class="bookingcontainer">
            <h2>MY BOOKINGS</h2>
            <hr id="separation">
            <% if (booking.bookings.length <= 0) { %>
                <div class="no-bookings">
                    <i class="fas fa-calendar-times"></i>
                    <h1 id="na">No Bookings To Show</h1>
                    <p>You have not booked any rooms yet!</p>
                    <a href="/room" class="browse-rooms-btn">Browse Rooms</a>
                </div>
            <% } else { %>
                <div class="cardcontainer">
                    <% booking.bookings.forEach(bookings => { %>
                        <div class="card">
                            <div class="card-header">
                                <h2><%= bookings.bookedRoom.roomName %></h2>
                                <span class="status-badge status-<%= bookings.status.toLowerCase() %>">
                                    <%= bookings.status %>
                                </span>
                            </div>
                            <div class="card-content">
                                <div class="booking-info">
                                    <div class="info-item">
                                        <i class="fas fa-calendar-check"></i>
                                        <span>Check-In: <strong><%= bookings.checkInDate%></strong></span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-calendar-times"></i>
                                        <span>Check-Out: <strong><%= bookings.checkOutDate %></strong></span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-users"></i>
                                        <span>Guests: <strong><%= bookings.guestNum %></strong></span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-money-bill-wave"></i>
                                        <span>Amount: <strong>Rs. <%= bookings.totallCost %></strong></span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-hashtag"></i>
                                        <span>Order ID: <strong><%= bookings._id %></strong></span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-clock"></i>
                                        <span>Booked: <strong><%= bookings.CreatedAt %></strong></span>
                                    </div>
                                </div>
                                <div class="card-actions">
                                    <a href="/user/booking/cancel/<%= bookings._id %>" class="cancelbook">
                                        <i class="fas fa-times"></i> Cancel Booking
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
    
    <div class="pagination">
        <% if (page > 1) { %>
            <a href="?page=<%= page - 1 %>" class="pagination-link">
                <i class="fas fa-chevron-left"></i> Previous
            </a>
        <% } %>
        <span>Page <%= page %> of <%= Math.ceil(totalBookings / pageSize) %></span>
        <% if (page < Math.ceil(totalBookings / pageSize)) { %>
            <a href="?page=<%= page + 1 %>" class="pagination-link">
                Next <i class="fas fa-chevron-right"></i>
            </a>
        <% } %>
    </div>
    
    <%- include('./partials/commonscript.ejs') %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Preloader
            const loader = document.getElementById("preloader");
            window.addEventListener("load", () => {
                loader.style.display = 'none';
            });

            // Date Formatting
            function formatDate(dateString) {
                const options = { year: 'numeric', month: 'long', day: 'numeric' };
                return new Date(dateString).toLocaleDateString(undefined, options);
            }

            document.querySelectorAll('.checkInDate').forEach(element => {
                element.textContent = formatDate(element.textContent);
            });

            document.querySelectorAll('.checkOutDate').forEach(element => {
                element.textContent = formatDate(element.textContent);
            });

            document.querySelectorAll('.bookingDate').forEach(element => {
                element.textContent = formatDate(element.textContent);
            });

            // Enhanced Status Handling
            document.querySelectorAll('.status-badge').forEach(element => {
                const statusText = element.textContent.toLowerCase().trim();
                const card = element.closest('.card');
                const cancelBtn = card.querySelector('.cancelbook');
                
                if (statusText === 'cancelled') {
                    element.classList.add('status-cancelled');
                    cancelBtn.classList.add('disabled-button');
                    cancelBtn.innerHTML = '<i class="fas fa-ban"></i> Cancelled';
                    cancelBtn.removeAttribute('href');
                } else if (statusText === 'completed') {
                    element.classList.add('status-completed');
                    cancelBtn.classList.add('completed-btn');
                    cancelBtn.innerHTML = '<i class="fas fa-check"></i> Completed';
                    cancelBtn.removeAttribute('href');
                } else if (statusText === 'checked-in') {
                    element.classList.add('status-checked-in');
                    cancelBtn.classList.add('disabled-button');
                    cancelBtn.innerHTML = '<i class="fas fa-key"></i> Checked In';
                    cancelBtn.removeAttribute('href');
                } else {
                    element.classList.add('status-booked');
                }
            });

            // Enhanced Profile Image Upload
            const inputFile = document.getElementById("file");
            const userImg = document.getElementById("userimg");
            const imageContainer = document.getElementById("imgholder");
            
            imageContainer.addEventListener("click", () => {
                inputFile.click();
            });

            inputFile.onchange = function() {
                if (this.files && this.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        userImg.src = e.target.result;
                        // Add a subtle animation
                        userImg.style.transform = 'scale(1.1)';
                        setTimeout(() => {
                            userImg.style.transform = 'scale(1)';
                        }, 200);
                    };
                    reader.readAsDataURL(this.files[0]);
                }
            };

            // Enhanced Form Validation
            const profileForm = document.getElementById('profileForm');
            const nameInput = profileForm.querySelector('input[name="name"]');
            const emailInput = profileForm.querySelector('input[name="email"]');
            const phoneInput = profileForm.querySelector('input[name="phone"]');
            const addressInput = profileForm.querySelector('input[name="Address"]');

            // Real-time validation
            function validateField(input, pattern, errorId, errorMessage) {
                const errorElement = document.getElementById(errorId);
                if (!pattern.test(input.value.trim())) {
                    errorElement.style.display = 'block';
                    input.style.borderColor = '#dc3545';
                    return false;
                } else {
                    errorElement.style.display = 'none';
                    input.style.borderColor = '#28a745';
                    return true;
                }
            }

            // Add real-time validation listeners
            nameInput.addEventListener('blur', () => {
                const namePattern = /^[A-Za-z]+\s[A-Za-z]+$/;
                validateField(nameInput, namePattern, 'name-error', 'Please enter your full name.');
            });

            emailInput.addEventListener('blur', () => {
                const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                validateField(emailInput, emailPattern, 'email-error', 'Please enter a valid email address.');
            });

            phoneInput.addEventListener('blur', () => {
                const phonePattern = /^\d{10}$/;
                validateField(phoneInput, phonePattern, 'phone-error', 'Please enter a valid phone number.');
            });

            addressInput.addEventListener('blur', () => {
                if (addressInput.value.trim() !== '') {
                    const addressPattern = /^[A-Za-z]+,\s[A-Za-z]+$/;
                    validateField(addressInput, addressPattern, 'address-error', 'Please enter a valid address format (City, Country).');
                } else {
                    document.getElementById('address-error').style.display = 'none';
                    addressInput.style.borderColor = '#e1e5e9';
                }
            });

            profileForm.addEventListener('submit', function(event) {
                let valid = true;

                const namePattern = /^[A-Za-z]+\s[A-Za-z]+$/;
                if (nameInput.value.trim() === '' || !namePattern.test(nameInput.value.trim())) {
                    valid = false;
                    document.getElementById('name-error').style.display = 'block';
                    nameInput.style.borderColor = '#dc3545';
                }

                const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailPattern.test(emailInput.value.trim())) {
                    valid = false;
                    document.getElementById('email-error').style.display = 'block';
                    emailInput.style.borderColor = '#dc3545';
                }

                const phonePattern = /^\d{10}$/;
                if (!phonePattern.test(phoneInput.value.trim())) {
                    valid = false;
                    document.getElementById('phone-error').style.display = 'block';
                    phoneInput.style.borderColor = '#dc3545';
                }

                if (addressInput.value.trim() !== '') {
                    const addressPattern = /^[A-Za-z]+,\s[A-Za-z]+$/;
                    if (!addressPattern.test(addressInput.value.trim())) {
                        valid = false;
                        document.getElementById('address-error').style.display = 'block';
                        addressInput.style.borderColor = '#dc3545';
                    }
                }

                if (!valid) {
                    event.preventDefault();
                    // Scroll to first error
                    const firstError = document.querySelector('.error-msg[style*="block"]');
                    if (firstError) {
                        firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                }
            });

            // Enhanced Message Handling
            const closeMsg = document.getElementById("close");
            const msgDiv = document.getElementById("msgdiv");
            
            if (closeMsg && msgDiv) {
                closeMsg.addEventListener("click", () => {
                    msgDiv.style.opacity = '0';
                    setTimeout(() => {
                        msgDiv.style.display = 'none';
                    }, 300);
                });

                // Auto-hide Message with fade effect
                setTimeout(() => {
                    if (msgDiv.style.display !== 'none') {
                        msgDiv.style.opacity = '0';
                        setTimeout(() => {
                            msgDiv.style.display = 'none';
                        }, 300);
                    }
                }, 5000);
            }

            // Add smooth scrolling for better UX
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
